    <build>
    	<finalName>LabManagerApi##${mainVersionNumber}</finalName>
        <plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<packagingExcludes>
						WEB-INF/classes/schema-*.sql*,
						WEB-INF/classes/application-*.yml,
						WEB-INF/classes/*.json,
						WEB-INF/classes/*.json_
					</packagingExcludes>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<delete includeEmptyDirs="true">
									<fileset dir="${project.basedir}/src/main/resources/static/css" includes="**/*"
									         excludes="labmanager/**"/>
								</delete>
								<copy todir="${project.basedir}/src/main/resources/static/css" flatten="true">
									<fileset dir="${project.basedir}/static-resources">
										<include name="**/*.css"/>
										<include name="**/*.css.map"/>
										<exclude name="old/**"/>
									</fileset>
								</copy>
								<delete includeEmptyDirs="true">
									<fileset dir="${project.basedir}/src/main/resources/static/webfonts" includes="**/*"
									         excludes="labmanager/**"/>
								</delete>
								<copy todir="${project.basedir}/src/main/resources/static/webfonts" flatten="true">
									<fileset dir="${project.basedir}/static-resources">
										<include name="**/*.otf"/>
										<include name="**/*.ttf"/>
										<include name="**/*.eot"/>
										<include name="**/*.svg"/>
										<include name="**/*.woff"/>
										<include name="**/*.woff2"/>
										<exclude name="old/**"/>
									</fileset>
								</copy>
								<delete includeEmptyDirs="true">
									<fileset dir="${project.basedir}/src/main/resources/static/js" includes="**/*"
									         excludes="labmanager/**"/>
								</delete>
								<copy todir="${project.basedir}/src/main/resources/static/js" flatten="true">
									<fileset dir="${project.basedir}/static-resources">
										<include name="**/*.js"/>
										<include name="**/*.js.map"/>
										<exclude name="old/**"/>
									</fileset>
								</copy>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.gmavenplus</groupId>
				<artifactId>gmavenplus-plugin</artifactId>
				<version>2.0.0</version>
				<executions>
					<execution>
						<id>compute-project-properties</id>
						<phase>initialize</phase>
						<goals>
							<goal>execute</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<scripts>
						<script>
<![CDATA[
def snapshotTag = "-SNAPSHOT";
def projectVersion = project.version
def isDevelVersion = projectVersion.endsWith(snapshotTag)
def version;
if (isDevelVersion) {
	def len = projectVersion.size() - snapshotTag.size();
	version = projectVersion.substring(0, len);
} else {
	version = projectVersion;
}
def projectBuildId = (new java.text.SimpleDateFormat("yyyyMMddHHmm")).format(session.getStartTime());
project.properties["mainVersionNumber"] = version + '-' + projectBuildId;
]]>
						</script>
					</scripts>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.apache.groovy</groupId>
						<artifactId>groovy-all</artifactId>
						<type>pom</type> 
						<version>4.0.3</version>
					</dependency>
				</dependencies>
			</plugin>
        </plugins>
    </build>

